<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
        version="3.0">
    <servlet>
        <servlet-name>favoriteProductsServlet</servlet-name>
        <servlet-class>servlets.FavoriteProductsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>favoriteProductsServlet</servlet-name>
        <url-pattern>/favorite</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productCartServlet</servlet-name>
        <servlet-class>servlets.ProductCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productCartServlet</servlet-name>
        <url-pattern>/product-cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
</web-app>
